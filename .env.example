# ====================
# Application Settings
# ====================
APP_NAME=vibe-web-starter
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development

# ====================
# API Settings
# ====================
API_V1_PREFIX=/api/v1
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ====================
# Database Settings (Supabase)
# ====================
# Supabase 대시보드 > Project Settings > Database > Connection string 참조
# Method: "Transaction pooler" 선택 권장 (포트 6543, asyncpg 최적화)

# ✅ 권장: DATABASE_URL 직접 설정
# 1. Supabase에서 Type=URI, Method="Transaction pooler" 선택
# 2. Connection string 복사 (postgresql://postgres.PROJECT_ID:PASSWORD@aws-0-region.pooler.supabase.com:6543/postgres)
# 3. postgresql:// → postgresql+asyncpg:// 변경
# 4. 비밀번호 특수문자 URL 인코딩 (! → %21, @ → %40, # → %23)
#
# 예시:
DATABASE_URL=postgresql+asyncpg://postgres.YOUR_PROJECT_ID:YOUR_PASSWORD%21@aws-0-region.pooler.supabase.com:6543/postgres

# 대안: 개별 변수로 설정 (Transaction pooler)
# DATABASE_URL 사용 시 아래 변수들은 무시됨
#POSTGRES_HOST=aws-0-region.pooler.supabase.com
#POSTGRES_PORT=6543
#POSTGRES_USER=postgres.YOUR_PROJECT_ID
#POSTGRES_PASSWORD=YOUR_PASSWORD
#POSTGRES_DB=postgres

# ====================
# DB Engine Options
# ====================
DB_ECHO=False
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ====================
# Security Settings
# ====================
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ====================
# Logging Settings
# ====================
LOG_LEVEL=INFO

# ====================
# Oracle Database Settings (Legacy TMS)
# ====================
# 레거시 TMS 시스템의 Oracle DB 연결 설정
# Format: oracle+oracledb://username:password@host:port/?service_name=SERVICE_NAME

ORACLE_USER=your_oracle_username
ORACLE_PASSWORD=your_oracle_password
ORACLE_HOST=your_oracle_host
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=your_service_name

# 또는 직접 URL로 설정 (위 개별 설정보다 우선됨)
# ORACLE_DATABASE_URL=oracle+oracledb://user:password@host:1521/?service_name=ORCL

# Oracle DB Engine Options
ORACLE_DB_ECHO=False
ORACLE_DB_POOL_SIZE=5
ORACLE_DB_MAX_OVERFLOW=10

# ====================
# Domain Plugin Settings
# ====================
# 도메인별 설정을 추가할 수 있습니다
# ENABLE_SAMPLE_DOMAIN=True
